{
  "name": "mexc-unified-trading-bot",
  "version": "1.0.0",
  "description": "Unified trading bot with manual and automated arbitrage trading",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "start:prod": "node dist/server.js",
    "dev": "tsc -w & node dist/server.js",
    "watch": "tsc -w",
    "deploy": "bash deploy.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop mexc-trading-bot",
    "pm2:restart": "pm2 restart mexc-trading-bot",
    "pm2:logs": "pm2 logs mexc-trading-bot"
  },
  "keywords": [
    "mexc",
    "binance",
    "arbitrage",
    "futures",
    "trading",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "mexc-futures-sdk": "^1.5.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "axios": "^1.6.0",
    "md5": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10",
    "@types/md5": "^2.1.2",
    "typescript": "^5.0.0"
  }
}

