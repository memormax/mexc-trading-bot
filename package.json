{
  "name": "mexc-unified-trading-bot",
  "version": "2.1.0",
  "description": "Unified trading bot with manual and automated arbitrage trading",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run copy-ui",
    "copy-ui": "node -e \"const fs=require('fs');const path=require('path');function copyDir(src,dest){if(fs.existsSync(src)){fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(f=>{const srcPath=path.join(src,f);const destPath=path.join(dest,f);if(fs.statSync(srcPath).isDirectory()){fs.cpSync(srcPath,destPath,{recursive:true});}else{fs.copyFileSync(srcPath,destPath);}});}}copyDir('services/ferm/ui','dist/services/ferm/ui');copyDir('services/flip/ui','dist/services/flip/ui');copyDir('services/shared/ui','dist/services/shared/ui');\"",
    "start": "npm run build && node dist/server.js",
    "start:prod": "node dist/server.js",
    "dev": "tsc -w & node dist/server.js",
    "watch": "tsc -w",
    "deploy": "bash deploy.sh",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop mexc-trading-bot",
    "pm2:restart": "pm2 restart mexc-trading-bot",
    "pm2:logs": "pm2 logs mexc-trading-bot"
  },
  "keywords": [
    "mexc",
    "binance",
    "arbitrage",
    "futures",
    "trading",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express-session": "^1.18.2",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.19.0",
    "md5": "^2.3.0",
    "mexc-futures-sdk": "^1.5.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/md5": "^2.1.2",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.0.0"
  }
}
